{
  "name": "@ekka/contracts",
  "version": "0.1.0",
  "description": "EKKA Protocol Contracts - JSON Schemas and TypeScript types",
  "type": "module",
  "main": "generated/ts/index.js",
  "types": "generated/ts/index.d.ts",
  "scripts": {
    "validate": "tsx scripts/validate_samples.ts",
    "generate:types": "tsx scripts/generate_ts_types.ts",
    "build": "npm run validate && npm run generate:types",
    "test": "npm run validate"
  },
  "files": [
    "protocol/**/*.json",
    "governance/**/*.json",
    "vault/**/*.json",
    "common/**/*.json",
    "generated/ts/**/*"
  ],
  "keywords": [
    "ekka",
    "contracts",
    "json-schema",
    "protocol"
  ],
  "license": "MIT",
  "devDependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "json-schema-to-typescript": "^13.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
