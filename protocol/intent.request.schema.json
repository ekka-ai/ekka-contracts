{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.ekka.ai/protocol/intent.request.schema.json",
  "title": "IntentRequest",
  "description": "Request to submit an intent for processing",
  "type": "object",
  "properties": {
    "op": {
      "type": "string",
      "description": "Operation identifier (e.g., 'file.write', 'test.echo')",
      "minLength": 1
    },
    "payload": {
      "type": "object",
      "description": "Operation-specific payload data",
      "additionalProperties": true
    },
    "ai_override": {
      "type": "object",
      "description": "Optional AI provider/model override",
      "properties": {
        "provider": {
          "type": "string",
          "description": "AI provider to use (e.g., 'openai', 'claude')"
        },
        "model": {
          "type": "string",
          "description": "AI model to use (e.g., 'gpt-4', 'claude-3')"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["op", "payload"],
  "additionalProperties": false
}
