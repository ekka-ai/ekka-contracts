{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.ekka.ai/vault/bundle.manifest.schema.json",
  "title": "BundleManifest",
  "description": "Manifest file for a vault bundle",
  "type": "object",
  "properties": {
    "bundle_id": {
      "type": "string",
      "description": "Unique identifier for this bundle",
      "minLength": 1,
      "pattern": "^[a-z0-9][a-z0-9-]*[a-z0-9]$"
    },
    "version": {
      "type": "string",
      "description": "SemVer version string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.]+)?(\\+[a-zA-Z0-9.]+)?$"
    },
    "created_at": {
      "type": "string",
      "description": "ISO 8601 timestamp when bundle was created",
      "format": "date-time"
    }
  },
  "required": ["bundle_id", "version", "created_at"],
  "additionalProperties": false
}
